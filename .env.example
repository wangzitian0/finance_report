# Backend
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/finance_report
DEBUG=true

# OpenRouter API (for document extraction)
OPENROUTER_API_KEY=your_openrouter_api_key_here
PRIMARY_MODEL=google/gemini-3-flash
FALLBACK_MODELS=google/gemini-2.0,openai/gpt-4-turbo
OPENROUTER_DAILY_LIMIT_USD=2

# Base currency
BASE_CURRENCY=SGD

# S3 / MinIO (for file storage)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_BUCKET=statements

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Dokploy API (for deployment debugging)
# Generate from: https://cloud.zitian.party/dashboard/settings/profile
DOKPLOY_API_KEY=your_dokploy_api_key_here
DOKPLOY_API_URL=https://cloud.zitian.party/api
